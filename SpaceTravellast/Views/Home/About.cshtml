@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<!--End Banner Section -->
<!--About Us Section-->
<section class="about-section alternate">
    <div class="bg-grad-right"><img src="~/images/background/bg-gradient-2.png" alt="" title=""></div>
    <div class="auto-container">
        <div class="row clearfix">
            <!--Text Col-->
            <div class="text-col col-lg-6 col-md-12 col-sm-12">
                <div class="inner wow fadeInRight" data-wow-duration="1500ms" data-wow-delay="0ms">
                    <div class="d-elem-1"><img src="~/images/resource/d-elem-1.png" alt=""></div>
                    <div class="title-box">
                        <div class="subtitle">@localizer["Let’s Explore the World"]</div>
                        <h2><span style="font-family: 'Roboto', sans-serif;font-weight: 500;">@localizer["Make your tour more enjoyable with Space Travel"]</span></h2>
                        <div class="text">@localizer["From breathtaking views to impeccable service, treat yourself and your loved ones to a spectacular vacation that will leave you mesmerized."]</div>
                    </div>
                    <div class="features">
                        <div class="row clearfix">
                            <div class="f-block col-lg-6 col-md-6 col-sm-12">
                                <div class="inner-box">
                                    <div class="icon"><img src="~/images/resource/f-icon-1.png" alt=""></div>
                                    <h6 style="font-family: 'Roboto', sans-serif;font-weight: 400;">@localizer["Travel and visa organizer"]</h6>
                                </div>
                            </div>
                            <div class="f-block col-lg-6 col-md-6 col-sm-12">
                                <div class="inner-box">
                                    <div class="icon"><img src="~/images/resource/f-icon-2.png" alt=""></div>
                                    <h6 style="font-family: 'Roboto', sans-serif;font-weight: 400;">@localizer["A solution to every issue related to tourism"]</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="lower-text">
                        <div class="text">
                            <ul>
                                <li>@localizer["Hurry up to make a reservation before the places run out and the prices increase."]</li>
                                <li>@localizer["Take advantage of the opportunity to have a wonderful vacation."]</li>
                                <li>@localizer["Live unforgettable moments."]</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--Image Col-->
            <div class="image-col col-lg-6 col-md-12 col-sm-12">
                <div class="inner wow fadeInLeft" data-wow-duration="1500ms" data-wow-delay="0ms">
                    <div class="bg-grad-left"><img src="~/images/background/bg-gradient-26.png" alt="" title=""></div>
                    <div class="d-elem-1"><img src="~/images/resource/d-elem-16.png" alt=""></div>
                    <div class="d-elem-2"><img src="~/images/resource/d-elem-17.png" alt=""></div>
                    <div class="image-box clearfix">
                        <div class="image"><img src="~/images/resource/image-55.jpg" alt="" title=""></div>
                        <div class="image"><img src="~/images/resource/image-56.jpg" alt="" title=""></div>
                    </div>
                    <div class="exp"><span class="count">3</span> @localizer["Successful"] <br>@localizer["years"]</div>
                </div>
            </div>
        </div>
    </div>
</section>


