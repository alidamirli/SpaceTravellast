    <div class="auto-container">
        <!--Part One-->
        <div class="part-one">
            <div class="row clearfix">

                <!--Content Side-->
                <div class="content-side col-xl-8 col-lg-12 col-md-12 col-sm-12">
                    <div class="content-inner">

                        <div class="sp-header">
                            <div class="loc-rat clearfix">
                                <div class="location">@Model.HotelCity.CityName</div>
                                <div class="rating"><a href="#" class="theme-btn"><i class="fa fa-star"></i> <strong>@Model.HotelStars</strong>   <span class="count">3210 Views</span></a></div>
                                <div class="add-fav"><a href="#"><i class="far fa-heart"></i> Save</a></div>
                            </div>
