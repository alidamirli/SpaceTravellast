                        </div>

                        <div class="upper-content">
                            <div class="text-content">
                                <h3>@localizer["About this Hotel"]</h3>
                                <p>@Model.HotelDescription</p>
                                <br>
                                <div class="t-gallery">
                                    <h3>@localizer["Gallery"]</h3>
                                    <div class="images">
                                        <ul class="clearfix">
                                            @foreach (Hotel item in ViewBag.HotelsPhotos)
                                            {
                                                <li><div class="image"><a href="" class="lightbox-image" data-fancybox="SbGallery"><img src="~/images/Small/@item.HotelPhoto" alt=""></a></div></li>
                                            }
