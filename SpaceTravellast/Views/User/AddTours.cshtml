@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model Turlar

<div style="margin-top:100px">
    <div>
        <form action="~/User/AddTours" method="post" enctype="multipart/form-data">
            <div class="w-25 mx-auto mt-3">
                <h2>AddTour</h2>
                <div>
                    <input type="text" autofocus="" asp-for="TurAd" placeholder="@localizer["Enter the name of the tour"]" class="form-control mb-1">
                    <span asp-validation-for="TurAd" class="text-Tours"></span>
                </div>
                <div>
                    <select name="TurlarCountryId" class="form-control mb-1">
                        <option>@localizer["Select a country"]</option>
                        @foreach (Country item in ViewBag.Country)
                        {
                            <option value="@item.CountryId">
                                @item.CountryName
                            </option>
                        }
                    </select>
                </div>
                <div>
                    <select name="TurlarCategoryId" class="form-control mb-1">
                        <option>@localizer["Select a category"]</option>
                        @foreach (Category item in ViewBag.Category)
                        {
                            <option value="@item.CategoryId">
                                @item.CategoryName
                            </option>
                        }
                    </select>
                </div>
                @*   
                <div>
                <select name="TurlarCountryId" class="form-control mb-1">
                @foreach (Country item in ViewBag.Country)
                {
                <option value="@item.CountryId">
                @item.CountryName
                </option>
                }
                </select>
                </div>
                *@
                <div>
                    <input type="date" asp-for="TurTarix" placeholder="@localizer["Enter a date"]" class="form-control mb-1">
                    <span asp-validation-for="TurTarix" class="text-Tours"></span>
                </div>
                <div>
                    <textarea asp-for="TurDescription" placeholder="@localizer["Add a description"]" class="form-control mb-1"></textarea>
                    <span asp-validation-for="TurDescription" class="text-Tours"></span>
                </div>
                <div>
                    <span style="color:black">@localizer["Insert a tour cover photo"]</span>
                    <input type="file" name="ilksekil" placeholder="@localizer["Insert a tour cover photo"]" class="form-control mb-1">
                </div>
                <div>
                    <span style="color:black">@localizer["Insert other images"]</span>
                    <input type="file" name="photo" multiple placeholder="@localizer["Insert other images"]" class="form-control mb-1">
                </div>
                <div>
                    <input type="number" asp-for="TurPrice" placeholder="Qiymet daxil edin" class="form-control mb-1">
                    <span asp-validation-for="TurPrice" class="text-Tours"></span>
                </div>
                <div>
                    <select name="TurlarCurrencyId" class="form-control mb-1">
                        <option>
                            @localizer["Select a currency"]
                        </option>
                        @foreach (Currency item in ViewBag.Currency)
                        {
                            <option value="@item.CurrencyId">
                                @item.CurrencyName
                            </option>
                        }
                    </select>
                </div>

                <button class="btn btn-success">@localizer["Add"]</button>
            </div>

        </form>
    </div>
</div>
